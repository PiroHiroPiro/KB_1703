<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="haruurara.android.WriteIdeaActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/WriteIdea_layout"
        android:layout_width="395dp"
        android:layout_height="643dp"
        android:orientation="vertical"
        android:weightSum="1.0"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/WriteIdea_label_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WriteIdea_label_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="良いアイディアは出ましたか？？"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/ideaEditText"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="text|textMultiLine"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="26dp" />

        <LinearLayout
            android:id="@+id/WriteIdeaActivity_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1.0"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/noSendIdeaFinishButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#f5A623"
                android:text="FINISH"
                android:textColor="#ffffff"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />

            <Button
                android:id="@+id/finishButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#f5A623"
                android:text="SEND"
                android:textColor="#ffffff"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="447dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
