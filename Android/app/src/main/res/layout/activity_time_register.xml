<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="haruurara.android.TimeRegisterActivity">

    <LinearLayout
        android:id="@+id/TimeRegister_layout"
        android:layout_width="395dp"
        android:layout_height="643dp"
        android:orientation="vertical"
        android:weightSum="1.0"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/TimeRegister_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/TImeRegister_title_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/timeregistertitle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TimeRegister_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:weightSum="1.0">

            <LinearLayout
                android:id="@+id/TImeRegister_label_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TimeRegister_label_textVIew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1人あたりの所要時間"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TimeRegister_register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <LinearLayout
                    android:id="@+id/TimeRegister_spinner_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:weightSum="1.0">

                    <Spinner
                        android:id="@+id/TimeRegister_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="#9B9B9B"
                        android:textColor="#000000"
                        android:textSize="40sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TimeRegister_unit_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TimeRegister_unit_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="分"
                        android:textColor="#ffffff"
                        android:textSize="40sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TimeRegister_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <Button
                android:id="@+id/TimeRegister_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="26dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.4"
                android:background="#f5A623"
                android:gravity="center"
                android:text="BACK"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/TimeRegister_ok_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.4"
                android:background="#f5A623"
                android:gravity="center"
                android:text="OK"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@+id/BrainStorm_back_button"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
